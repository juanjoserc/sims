<h1>Secret agents Tickets</h1>	
<%= link_to "New Ticket", new_ticket_path, class: "btn btn-primary" %>
<table class="table table-striped">
 <thead>
 	<tr>
	 	<th>ID</th>
	 	<th>Service</th>
	 	<th>Subject</th>
	 	<th>Description</th>
	 	<th>Estimated Resolution Time</th>
	 	<th>Status</th>
	 	<th colspan="3"></th>
 	</tr>
 	</thead>
 <tbody>
 	<% @tickets.each do |ticket| %>
 		<tr>
 			<td><%= ticket.id %></td>
 			<td><%= ticket.service.name %></td>
 			<td><%= ticket.subject %></td>
 			<td><%= ticket.description %></td>
 			<td><%= ticket.estimated_resolution_time %></td>
 			<td><%= ticket.ticket_status.name %></td>
 			<td><%= link_to "Show", ticket %></td>
 			<% if @current_user.admin? or @current_user.tech? %>
 			<td><%= link_to "Edit", edit_ticket_path(ticket) %></td>
 			<% end %>
 			<td><%= link_to "Delete", ticket, method: :delete, data: { confirm: 'Are you sure?'} %></td>
 		</tr>
 	<% end %>
 </tbody>	
</table>
