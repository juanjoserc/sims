<h1>User Roles</h1>	
<%= link_to "New role", new_user_role_path, class: "btn btn-primary" %>
<table class="table table-striped">
 <thead>
 	<tr>
	 	<th>ID</th>
	 	<th>Role Name</th>
	 	<th colspan="3"></th>
 	</tr>
 	</thead>
 <tbody>
 	<% @user_roles.each do |role| %>
 		<tr>
 			<td><%= role.id %></td>
 			<td><%= role.name %></td>
 			<td><%= link_to "Show", role %></td>
 			<td><%= link_to "Edit", edit_user_role_path(role) %></td>
 			<td><%= link_to "Delete", role, method: :delete, data: { confirm: 'Are you sure?'} %></td>
 		</tr>
 	<% end %>
 </tbody>	
</table>
