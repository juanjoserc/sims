<!DOCTYPE html>
<html>
<head>
  <title>Sims for Secret Agents</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="main-container" class="container">
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	    </div>
	    <% if current_user %>
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li><%= link_to "Tickets", tickets_path %></li>
	        <% if current_user.admin? %>
	        <li class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
	          <ul class="dropdown-menu">
	            <li><%= link_to "Users", users_path %></li>
	            <li><%= link_to "User Roles", user_roles_path %></li>
	            <li role="separator" class="divider"></li>
	            <li><%= link_to "Services", services_path %></li>
	            <li><%= link_to "Ticket Statuses", ticket_statuses_path %></li>
	          </ul>
	        </li>
	        <% end %>
	        <li><%= link_to "Log out", logout_path, method: "delete" %></li>
	        <li><%= link_to @current_user.first_name, @current_user %></li>
	      </ul>
	    </div>
	    <% else %>
	     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li><%= link_to "Log in", 'login' %></li>
	         <li><%= link_to "Sign up", 'signup' %></li>
	      </ul>
	    </div>
	   <% end %> 
	  </div>
	</nav>
	<%= yield %>
	<div class="navbar navbar-default">
	  <div class="container">
	    <span class="navbar-text">
	      All rights reserved 2015
	    </span>
	  </div>
	</div>
</div>
</body>
</html>
