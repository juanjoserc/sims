<h1>Ticket Statuses</h1>	
<%= link_to "New status", new_ticket_status_path, class: "btn btn-primary" %>
<table class="table table-striped">
 <thead>
 	<tr>
	 	<th>ID</th>
	 	<th>Status Name</th>
	 	<th>Description</th>
	 	<th colspan="3"></th>
 	</tr>
 	</thead>
 <tbody>
 	<% @ticket_statuses.each do |status| %>
 		<tr>
 			<td><%= status.id %></td>
 			<td><%= status.name %></td>
 			<td><%= link_to "Show", status %></td>
 			<td><%= link_to "Edit", edit_ticket_status_path(status) %></td>
 			<td><%= link_to "Delete", status, method: :delete, data: { confirm: 'Are you sure?'} %></td>
 		</tr>
 	<% end %>
 </tbody>	
</table>
