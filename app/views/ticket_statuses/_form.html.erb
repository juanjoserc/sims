<%= form_for @ticket_status do |f| %>
	 <% if @ticket_status.errors.any? %>
     <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong> The following <%= pluralize(@ticket_status.errors.count, "error") %> prohibited
          this status from being saved:</strong>
          <ul>
          <% @ticket_status.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <div class="form-group">
		<%= f.label :status_name %><br>
		<%= f.text_field :name, class: "form-control"%><br>
  </div>
  <div class="form-group"> 
		<%= f.submit "Save", class: 'btn btn-success' %>
		<%= link_to "Cancel", ticket_statuses_path, class: 'btn btn-danger' %>
    </div>  
	<% end %>	